{% extends 'base.html.twig' %}

{% block title %}Prestamo{% endblock %}

{% block body %}
    <h1>Prestamo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestamo.id }}</td>
            </tr>
            <tr>
                <th>FechaPrestamo</th>
                <td>{{ prestamo.fechaPrestamo ? prestamo.fechaPrestamo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FechaDevolucion</th>
                <td>{{ prestamo.fechaDevolucion ? prestamo.fechaDevolucion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ prestamo.estado }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ prestamo.observaciones }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ prestamo.relation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_prestamo_index') }}">Regresar</a>

    <a href="{{ path('app_prestamo_edit', {'id': prestamo.id}) }}">Editar</a>

    {{ include('prestamo/_delete_form.html.twig') }}
{% endblock %}
