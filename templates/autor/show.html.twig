{% extends 'base.html.twig' %}

{% block title %}Autor{% endblock %}

{% block body %}
    <h1>Autor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ autor.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ autor.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ autor.apellido }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ autor.email }}</td>
            </tr>
            <tr>
                <th>FechaNacimiento</th>
                <td>{{ autor.fechaNacimiento ? autor.fechaNacimiento|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Biografia</th>
                <td>{{ autor.biografia }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_autor_index') }}">back to list</a>

    <a href="{{ path('app_autor_edit', {'id': autor.id}) }}">edit</a>

    {{ include('autor/_delete_form.html.twig') }}
