{% extends 'base.html.twig' %}

{% block title %}Libro{% endblock %}

{% block body %}
    <h1>Libro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ libro.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ libro.titulo }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ libro.isbn }}</td>
            </tr>
            <tr>
                <th>FechaPublicacion</th>
                <td>{{ libro.fechaPublicacion ? libro.fechaPublicacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ libro.genero }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ libro.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_libro_index') }}">back to list</a>

    <a href="{{ path('app_libro_edit', {'id': libro.id}) }}">edit</a>

    {{ include('libro/_delete_form.html.twig') }}
{% endblock %}
